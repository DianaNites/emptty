[Unit]
Description=emptty display manager
After=systemd-user-sessions.service plymouth-quit-wait.service
Conflicts=getty@tty1.service

[Service]
Type=idle
ExecStartPre=/etc/emptty/conf
ExecStart=/usr/bin/agetty -nl /usr/bin/emptty 38400 tty1 linux
Restart=always
RestartSec=0
TTYPath=/dev/tty1
TTYReset=yes
KillMode=process
IgnoreSIGPIPE=no
SendSIGHUP=yes

[Install]
Alias=display-manager.service

