[Unit]
Description=emptty display manager
After=systemd-user-sessions.service plymouth-quit-wait.service
Conflicts=getty@tty7.service

[Service]
Type=idle
ExecStart=/usr/bin/agetty -nl /usr/bin/emptty 38400 tty7 linux
Restart=always
TTYPath=/dev/tty7
TTYReset=yes
KillMode=process
IgnoreSIGPIPE=no
SendSIGHUP=yes

[Install]
Alias=display-manager.service

