[Unit]
Description=emptty display manager
After=systemd-user-sessions.service

[Service]
EnvironmentFile=/etc/emptty/conf
Type=idle
ExecStart=/usr/bin/agetty -nl /usr/bin/emptty 38400 tty${TTY_NUMBER} linux
Restart=always
TTYPath=/dev/tty${TTY_NUMBER}
TTYReset=yes
KillMode=process
IgnoreSIGPIPE=no
SendSIGHUP=yes

[Install]
Alias=display-manager.service
